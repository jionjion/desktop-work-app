<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="top.jionjion.work.controller.JsonToolTemplateController"
   spacing="15" styleClass="bg-white,rounded,shadow">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <!-- 标题 -->
   <Label fx:id="titleLabel" text="JSON工具" styleClass="text-primary"
      style="-fx-font-size: 24px; -fx-font-weight: bold;" />
   <HBox>
      <Separator HBox.hgrow="ALWAYS" />
   </HBox>

   <!-- 输入区 -->
   <VBox spacing="8">
      <Label text="输入JSON:" styleClass="text-dark" />
      <TextArea fx:id="inputArea" promptText="请输入JSON字符串..."
         prefRowCount="8" style="-fx-pref-width: 600px;" />
   </VBox>

   <!-- 操作按钮区 -->
   <HBox spacing="10" alignment="CENTER_RIGHT">
      <Button fx:id="formatBtn" text="格式化" styleClass="btn,btn-primary" onAction="#onFormatJson" />
      <Button fx:id="compressBtn" text="压缩" styleClass="btn,btn-success" onAction="#onCompressJson" />
      <Button fx:id="validateBtn" text="验证" styleClass="btn,btn-info" onAction="#onValidateJson" />
      <Button fx:id="clearBtn" text="清空" styleClass="btn,btn-secondary" onAction="#onClearContent" />
   </HBox>

   <!-- 输出区 -->
   <VBox spacing="8">
      <Label text="输出结果:" styleClass="text-dark" />
      <TextArea fx:id="outputArea" editable="false" prefRowCount="8"
         style="-fx-pref-width: 600px;" />
   </VBox>

   <!-- 状态栏 -->
   <Label fx:id="statusLabel" text="就绪" styleClass="text-muted"
      style="-fx-font-size: 12px;" />
</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="top.jionjion.work.controller.CodeDirectoryConfigController"
   spacing="15" styleClass="bg-white,rounded,shadow">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <!-- 标题 -->
   <Label text="项目配置" styleClass="text-primary" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
   <HBox>
      <Separator HBox.hgrow="ALWAYS" />
   </HBox>

   <!-- 表单输入区域 -->
   <GridPane hgap="10" vgap="10">
      <columnConstraints>
         <ColumnConstraints minWidth="80.0" />
         <ColumnConstraints hgrow="ALWAYS" />
      </columnConstraints>

      <Label text="名称:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
      <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

      <Label text="类型:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <ComboBox fx:id="typeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />

      <Label text="路径:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <TextField fx:id="pathField" HBox.hgrow="ALWAYS" />
         <Button fx:id="browseBtn" text="浏览" />
      </HBox>
   </GridPane>

   <!-- 操作按钮 -->
   <HBox spacing="10" alignment="CENTER_RIGHT">
      <Button fx:id="addBtn" text="添加" styleClass="btn,btn-primary" />
      <Button fx:id="updateBtn" text="更新" styleClass="btn,btn-success" />
      <Button fx:id="deleteBtn" text="删除" styleClass="btn,btn-danger" />
      <Button fx:id="clearBtn" text="清空" styleClass="btn,btn-secondary" />
   </HBox>

   <!-- 项目列表 -->
   <VBox spacing="8" VBox.vgrow="ALWAYS">
      <Label text="项目列表：" styleClass="text-dark" />
      <TableView fx:id="directoryTableView" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="0" visible="false" />
            <TableColumn fx:id="nameColumn" text="名称" prefWidth="150.0" />
            <TableColumn fx:id="typeColumn" text="类型" prefWidth="100.0" />
            <TableColumn fx:id="pathColumn" text="路径" prefWidth="300.0" />
         </columns>
      </TableView>
   </VBox>
</VBox>